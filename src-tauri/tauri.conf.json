{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "BoltDown",
  "version": "0.1.1",
  "identifier": "io.boltdown.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: https: asset: http://asset.localhost",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self'",
        "font-src": "'self' data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**", "$DOCUMENT/**", "$DESKTOP/**", "$DOWNLOAD/**", "$PICTURE/**"]
      }
    },
    "windows": [
      {
        "title": "BoltDown - Lightning-Fast Markdown",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "dragDropEnabled": true,
        "theme": "Light"
      }
    ],
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2026 PignuAnte (Ai-Scream)",
    "category": "Productivity",
    "shortDescription": "Lightning-fast Markdown editor",
    "longDescription": "BoltDown is a lightning-fast, lightweight Markdown editor built with Tauri. 10x smaller than Electron apps, with instant startup and beautiful WYSIWYG editing."
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcyQkRGOTkwODlBREZBMjkKUldRcCtxMkprUG05Y3RiNW9HdlUxOG1zMHZoaWxWNFNQUzF0L3I3U210SjlIcFFnOU9JMzRjMnEK",
      "endpoints": ["https://github.com/ai-screams/BoltDown/releases/latest/download/latest.json"]
    }
  }
}
