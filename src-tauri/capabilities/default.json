{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for BoltDown main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "shell:allow-open",
    "updater:default",
    "process:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**/*", "$DOCUMENT/**/*", "$DESKTOP/**/*", "$DOWNLOAD/**/*", "$APPDATA/**/*"],
      "deny": ["$HOME/.ssh/**", "$HOME/.gnupg/**", "$HOME/.aws/**"]
    }
  ]
}
