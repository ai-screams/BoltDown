{
  "name": "boltdown",
  "version": "0.1.1",
  "description": "âš¡ Lightning-fast Markdown editor built with Tauri",
  "author": "PignuAnte (Ai-Scream)",
  "license": "MIT",
  "keywords": [
    "markdown",
    "editor",
    "tauri",
    "rust",
    "react",
    "wysiwyg",
    "electric",
    "lightweight",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-screams/BoltDown"
  },
  "homepage": "https://boltdown.io",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\"",
    "type-check": "tsc --noEmit",
    "rust:fmt": "cd src-tauri && cargo fmt",
    "rust:clippy": "cd src-tauri && cargo clippy -- -D warnings",
    "rust:test": "cd src-tauri && cargo test",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "rust:fmt:check": "cd src-tauri && cargo fmt -- --check",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run rust:fmt:check && npm run rust:clippy && npm run test:run && npm run rust:test",
    "knip": "knip",
    "prepare": "husky"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.6.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/search": "^6.5.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.39.14",
    "@react-symbols/icons": "^1.3.0",
    "@replit/codemirror-vim": "^6.3.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@uiw/react-codemirror": "^4.23.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "katex": "^0.16.25",
    "lucide-react": "^0.564.0",
    "markdown-it": "^14.1.1",
    "mermaid": "^11.0.0",
    "prismjs": "^1.29.0",
    "react": "^19.2.4",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.2.4",
    "react-dropzone": "^15.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@playwright/test": "^1.58.2",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/cli": "^2.10.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/prismjs": "^1.26.6",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
