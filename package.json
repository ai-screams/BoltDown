{
  "name": "boltdown",
  "version": "0.1.0",
  "description": "âš¡ Lightning-fast Markdown editor built with Tauri",
  "author": "BoltDown Team",
  "license": "MIT",
  "keywords": [
    "markdown",
    "editor",
    "tauri",
    "rust",
    "react",
    "wysiwyg",
    "electric",
    "lightweight",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-screams/BoltDown"
  },
  "homepage": "https://boltdown.io",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\"",
    "type-check": "tsc --noEmit",
    "rust:fmt": "cd src-tauri && cargo fmt",
    "rust:clippy": "cd src-tauri && cargo clippy -- -D warnings",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run rust:fmt && npm run rust:clippy",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0",
    "markdown-it": "^14.1.0",
    "katex": "^0.16.25",
    "mermaid": "^11.0.0",
    "prismjs": "^1.29.0",
    "@codemirror/view": "^6.34.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/commands": "^6.6.0",
    "@codemirror/search": "^6.5.0",
    "@uiw/react-codemirror": "^4.23.0",
    "lucide-react": "^0.462.0",
    "react-dropzone": "^14.3.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@tauri-apps/api": "^2.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/markdown-it": "^14.1.2",
    "@types/prismjs": "^1.26.5",
    "@vitejs/plugin-react": "^4.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "@eslint/eslintrc": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "tailwindcss": "^4.1.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
